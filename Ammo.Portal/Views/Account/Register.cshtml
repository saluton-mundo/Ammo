@model Ammo.Portal.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign Up";
}
<section class="getstarted fixed-bg" id="home">
    <div class="container" style="padding-top:10%;">
        <div class="row no-gutters frosted-white-bg">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h1>Sign <b class="red-text">Up</b></h1>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "contact-form get-started-form-div", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-field", @placeholder = "Enter a valid email..." })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "input-field", @placeholder = "Enter a password... (between 6 - 30 char, at least 1 number)" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-field", @placeholder = "Confirm your password..." })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-default standard-button red-button" value="Create Ammo Account" />
                        </div>
                    </div>
                }
            </div>
            <p>
                <b>Already part of Ammo? </b> @Html.ActionLink("Sign in here", "Login")
            </p>
            <div class="line red-line-bottom"></div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
