@model Ammo.Domain.ViewModels.ActivityLogViewModel

@{
    ViewBag.Title = "Activity Log";
    Layout = "~/Views/Shared/_LoggedInJournalLayout.cshtml";
}

<section id="journal-page">
    <div class="container">
        <div class="row">
            <div id="journal-page-canvas" class="col-lg-12 col-md-12 col-sm-12 journal-page-canvas">
                <!-- Which Months?-->
                <h1>@Model.ActivityLog.LogMonth.ToString("MMMM yyyy")</h1>
                <!-- Activity Log -->
                <div id="activity-log-table">
                    <table class="col-md-12 table-bordered table-striped table-condensed cf activity-log-margin-25">
                        <thead class="cf">
                            <tr>
                                <th class="activity-log-table-thead-th"><a href="javascript:void(0)"><img class="activity-log-table-thead-th-img" src="~/Assets/icons/add.png" /></a></th>
                                @foreach (DateTime day in Model.ActivityLog.LogDays)
                                {
                                    <th class="activity-log-table-thead-tr-th-day">
                                        @Html.Raw(day.Day)
                                        @Html.Raw(day.ToString("ddd").Substring(0, 2))
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody class="activity-log-table-tbody">
                            @foreach (Ammo.Domain.Entities.ActivityLogActivity activity in Model.ActivityLog.Activities)
                            {
                                <tr>
                                    <td class="activity-log-table-tbody-td-description">@activity.Description</td>
                                    @foreach (DateTime day in Model.ActivityLog.LogDays)
                                    {
                                        Ammo.Domain.Entities.ActivityLogEntry entry = Model.Entries.Where(e => e.ActivityLogEntryDate.Date == day.Date && e.ActivityId == activity.ActivityId).FirstOrDefault();

                                        if (entry != null)
                                        {
                                            <td data-entry-date="@entry.ActivityLogEntryDate" class="activity-log-table-tbody-tr-td-mark" style="background-color: @entry.Mark.Color"></td>
                                        }
                                        else
                                        {
                                            <td data-entry-date="@day.Date" class="activity-log-table-tbody-tr-td-mark"></td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 heading-block activity-log-margin-25">
                    <h3>
                        Activity Key
                        <small class="whats-this" id="whats-this-3">What's this?</small>
                        <!--TODO Customize -->
                        <a href="javascript:void(0)" class="journal-index-customize-a "><img class="journal-index-customize-a-img" src="~/Assets/icons/settings.png" /></a>
                    </h3>
                </div> <!-- /.heading-block -->
                <!-- Mark Picker -->
                <div class="col-lg-12 col-md-12 col-sm-12 activity-log-legend">
                    <ul class="legend">
                        @foreach (Ammo.Domain.Entities.ActivityLogEntryMark mark in Model.Marks)
                        {
                            <li><span class="activity-log-marks-div-mark-color" style="background-color:@Html.Raw(mark.Color ?? "#FFF")"></span> @mark.Description</li>
                        }
                        <li><span class="activity-log-marks-div-mark-color activity-log-marks-div-add"></span> Add New</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>