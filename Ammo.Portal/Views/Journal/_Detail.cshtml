@model Ammo.Domain.Entites.Journal

<div class="md-modal md-effect-1" id="modal-1">
    <div class="md-content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 journal-modal-detail">
                <div class="col-lg-5 col-md-5 col-sm-5">
                    <!-- Journal Cover large -->
                    <img class="shelf-journal-cover-img journal-modal-detail-cover-img" src="images/backgrounds/demo-cover.png" />
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7">
                    <h3>Demo Journal</h3>
                    <small class="grey-text"><i>Last updated 23rd Sept 2016 4:27pm</i></small>

                    <!-- Journal detail -->
                    <a href="Journal/index.html" class="btn btn-default standard-button journal-modal-detail-button green-button journal-modal-detail-button-open">Open Journal</a>
                    <button class="btn btn-default standard-button journal-modal-detail-button grey-outline">Change Cover</button>
                    <button class="btn btn-default standard-button journal-modal-detail-button red-outline">Delete Journal</button>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 journal-modal-detail-bottom-div">
                <button class="btn btn-default standard-button green-outline md-close">Close</button>
            </div>
        </div>
        <div class="four-lines">
            <div class="line red-line-bottom">
            </div>
            <div class="line green-line-bottom">
            </div>
            <div class="line purple-line-bottom">
            </div>
            <div class="line yellow-line-bottom">
            </div>
        </div>
    </div>
</div>
