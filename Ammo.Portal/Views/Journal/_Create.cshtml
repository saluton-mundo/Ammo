@model Ammo.Domain.Entities.Journal
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 journal-modal-detail">
        <div class="col-lg-5 col-md-5 col-sm-5">
            <!-- Journal Cover large -->
            <img class="shelf-journal-cover-img journal-modal-detail-cover-img" src="@Url.Action("JournalCoverGet", "Image", new { ImageName = Model.CoverUrl })" />
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Journal</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OwnerId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "input-field input-field-green" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "input-field input-field-green" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default standard-button green-button" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 journal-modal-detail-bottom-div">
        <button class="btn btn-default standard-button green-outline md-close" onclick="MODAL.Hide()">Close</button>
    </div>
</div>
<div class="four-lines">
    <div class="line red-line-bottom">
    </div>
    <div class="line green-line-bottom">
    </div>
    <div class="line purple-line-bottom">
    </div>
    <div class="line yellow-line-bottom">
    </div>
</div>